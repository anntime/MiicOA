<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.miic.contractManage.activity.AddExecuteActivity">
    <!--顶部-->
    <include layout="@layout/page_title_bar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
        <!--性别-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="发生金额(元)"
                android:textColor="@color/news_detail_time"
                android:textSize="16sp"/>
            <View
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="15dp"
                android:background="@color/main_line"
                android:layout_gravity="center"
                />
            <EditText
                android:id="@+id/execute_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=" "
                android:textColor="@color/news_detail_time"
                android:textSize="16sp"
                android:background="@null"/>
        </LinearLayout>
        <View android:layout_height="1dip"
            android:background="@color/main_line"
            android:layout_width="match_parent">
        </View>
        <!--民族-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="发生时间"
                android:textColor="@color/news_detail_time"
                android:textSize="16sp"/>
            <View
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="15dp"
                android:background="@color/main_line"
                android:layout_gravity="center"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/execute_Time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=" "
                    android:textColor="@color/news_detail_title"
                    android:textSize="16sp"
                    android:background="@null"/>
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center"
                    android:src="@drawable/down"/>
            </LinearLayout>
        </LinearLayout>
        <View android:layout_height="1dip"
            android:background="@color/main_line"
            android:layout_width="match_parent">
        </View>
        <!--部门-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="支付方式"
                android:textColor="@color/news_detail_time"
                android:textSize="16sp"/>
            <View
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="15dp"
                android:background="@color/main_line"
                android:layout_gravity="center"
                />
            <Spinner
                android:id="@+id/pay_way"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_gravity="bottom"/>
        </LinearLayout>
        <View android:layout_height="1dip"
            android:background="@color/main_line"
            android:layout_width="match_parent">
        </View>
        <!--所属口-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="备注"
                android:textColor="@color/news_detail_time"
                android:textSize="16sp"/>
            <View
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="15dp"
                android:background="@color/main_line"
                android:layout_gravity="center"
                />
            <EditText
                android:id="@+id/remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="请填写"
                android:textColorHint="@color/news_detail_time"
                android:text=""
                android:textColor="@color/news_detail_title"
                android:textSize="16sp"
                android:background="@null"
                android:singleLine="true"
                android:maxLines="1"/>
        </LinearLayout>
        <View android:layout_height="1dip"
            android:background="@color/main_line"
            android:layout_width="match_parent">
        </View>
    </LinearLayout>
    <!--按钮-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical"
        android:visibility="visible">
        <Button
            android:id="@+id/submit_execute_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/colorAccent"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:text="提交"
            android:textColor="@color/activitycolor"/>
    </LinearLayout>
</LinearLayout>
