        <!--新闻标题与时间-->
    <LinearLayout
        android:id="@+id/contract_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp" >
            <TextView
                android:id="@+id/contract_title"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="中心举办四季度中小企业形式分析专家座谈会"
                android:textSize="14sp"
                android:textColor="@color/news_detail_title"
                android:gravity="left"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:singleLine="true"
                android:ellipsize="end"/>
            <TextView
                android:id="@+id/contract_time"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="2018/12/30"
                android:textSize="14sp"
                android:textColor="@color/news_detail_time"
                android:gravity="left|bottom"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/contract_undertake_name"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="王宇静"
                android:textSize="14sp"
                android:textColor="@color/news_detail_time"
                android:gravity="left|bottom"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/contract_state"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="审批中(待监印)"
                android:textSize="14sp"
                android:textColor="@color/news_detail_time"
                android:gravity="right|bottom"
                android:layout_gravity="center"
                android:layout_marginRight="15dp"
                android:singleLine="true"
                android:ellipsize="end"/>
        </LinearLayout>
        <View
            android:layout_height="1dp"
            android:background="@color/main_line"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="10dp">
        </View>
    </LinearLayout>


        <!-- 以下都是侧滑菜单的内容依序排列 -->
        <Button
            android:id="@+id/finish_btn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="#d9dee4"
            android:text="完成"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/unfinish_btn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="#ecd50a"
            android:clickable="true"
            android:text="取消完成"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/stop_btn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@color/colorAccent"
            android:text="终止"
            android:textColor="@android:color/white"/>


    </com.mcxtzhang.swipemenulib.SwipeMenuLayout>

