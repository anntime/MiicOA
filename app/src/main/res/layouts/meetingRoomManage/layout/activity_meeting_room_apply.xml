<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.example.miic.meetingRoomManage.activity.MeetingRoomApplyActivity">
    <!--顶部-->
    <include layout="@layout/page_title_bar" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:fitsSystemWindows="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@color/content_background"
                android:gravity="left"
                android:paddingLeft="12dp"
                android:paddingTop="20dp"
                android:paddingBottom="12dp"
                android:text="会议室选择"
                android:textColor="@color/room_apply_title_color"
                android:textSize="16sp" />
            <View android:layout_height="1dip"
                android:background="@color/main_line"
                android:layout_width="match_parent">
            </View>
            <Spinner
                android:id="@+id/meeting_room"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_gravity="bottom"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                />
            <View android:layout_height="1dip"
                android:background="@color/main_line"
                android:layout_width="match_parent">
            </View>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@color/content_background"
                android:gravity="left"
                android:paddingLeft="12dp"
                android:paddingTop="20dp"
                android:paddingBottom="12dp"
                android:text="预定时间"
                android:textColor="@color/room_apply_title_color"
                android:textSize="16sp" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_marginLeft="12dp"
                    android:textSize="14sp"
                    android:textColor="@color/room_apply_label_color"
                    android:text="日期"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"/>
                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_marginRight="12dp"
                    android:textSize="14sp"
                    android:textColor="@color/room_apply_label_color"
                    android:text="2018-09-12"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"/>
            </LinearLayout>
            <View android:layout_height="1dip"
                android:background="@color/main_line"
                android:layout_width="match_parent">
            </View>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_marginLeft="12dp"
                    android:textSize="14sp"
                    android:textColor="@color/room_apply_label_color"
                    android:text="开始"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"/>
                <TextView
                    android:id="@+id/start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_marginRight="12dp"
                    android:textSize="14sp"
                    android:textColor="@color/room_apply_label_color"
                    android:text="8:00"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"/>
            </LinearLayout>
            <View android:layout_height="1dip"
                android:background="@color/main_line"
                android:layout_width="match_parent">
            </View>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_marginLeft="12dp"
                    android:textSize="14sp"
                    android:textColor="@color/room_apply_label_color"
                    android:text="结束"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"/>
                <TextView
                    android:id="@+id/end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_marginRight="12dp"
                    android:textSize="14sp"
                    android:textColor="@color/room_apply_label_color"
                    android:text="12:00"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"/>
            </LinearLayout>
            <View android:layout_height="1dip"
                android:background="@color/main_line"
                android:layout_width="match_parent">
            </View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:background="@color/room_apply_background_color"
                android:paddingLeft="12dp"
                android:paddingTop="12dp"
                android:paddingBottom="6dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:text="时段已占用情况"
                    android:textColor="@color/room_apply_text_color"
                    android:textSize="16sp" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.example.miic.base.multiLineRadioGroup.MultiLineRadioGroup
                        android:id="@+id/use_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:child_count="1"
                        app:child_layout="@layout/time_radio_group_child"
                        app:child_margin_horizontal="2.0dp"
                        app:child_margin_vertical="2.0dp"
                        app:child_values="@array/use_time_list"
                        app:gravity="1"
                        app:single_choice="true">
                    </com.example.miic.base.multiLineRadioGroup.MultiLineRadioGroup>
                </LinearLayout>
            </LinearLayout>
            <View android:layout_height="1dip"
                android:background="@color/main_line"
                android:layout_width="match_parent">
            </View>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@color/content_background"
                android:gravity="left"
                android:paddingLeft="12dp"
                android:paddingTop="20dp"
                android:paddingBottom="12dp"
                android:text="主题"
                android:textColor="@color/room_apply_title_color"
                android:textSize="16sp" />
            <View android:layout_height="1dip"
                android:background="@color/main_line"
                android:layout_width="match_parent">
            </View>
            <EditText
                android:id="@+id/topic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="汇报会"
                android:textColor="@color/room_apply_title_color"
                android:textSize="14sp"
                android:background="@null"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:background="@color/content_background"
                android:paddingLeft="12dp"
                android:paddingTop="20dp"
                android:paddingBottom="12dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:text="预定部门"
                    android:textColor="@color/room_apply_title_color"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/dept_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textSize="14sp"
                    android:textColor="@color/room_apply_label_color"
                    android:text="软件部"
                    android:paddingTop="10dp"
                    android:paddingBottom="20dp"/>
                <Spinner
                    android:id="@+id/sp_dept_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="bottom"
                    android:gravity="left"
                    android:textSize="14sp"
                    android:textColor="@color/room_apply_label_color"
                    android:paddingTop="10dp"
                    android:paddingBottom="20dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:text="预订人"
                    android:textColor="@color/room_apply_title_color"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textSize="14sp"
                    android:textColor="@color/room_apply_label_color"
                    android:text="张三"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"/>
                <Button
                    android:id="@+id/submit_button"
                    style="?android:textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/room_text_color"
                    android:text="提 交 预 约"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>
