<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/meeting_room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/room_background_color"
        android:gravity="left"
        android:padding="15dp"
        android:text="5008   (5)"
        android:textColor="@color/room_text_color"
        android:textSize="18sp" />
    <LinearLayout
        android:id="@+id/meeting_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:visibility="gone"
        >
        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/use_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"

                        android:textSize="14sp"
                        android:text="08:00~09:00"
                        android:textColor="@color/room_text_color"/>
                    <TextView
                        android:id="@+id/dept_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:text="用户处"
                        android:textColor="#fff"
                        android:textSize="14sp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:background="@drawable/room_btn_shape_background"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_gravity="left"
                    android:text="快充站项目沟通"
                    android:textColor="@color/news_detail_content"/>
            </LinearLayout>
            <TextView
                android:id="@+id/cancel_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/room_shape_background"
                android:text="取消"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="18sp"/>
        </LinearLayout>
        <View
            android:id="@+id/dotted_line"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@drawable/bg_dotted_line"
            />
    </LinearLayout>
</LinearLayout>
