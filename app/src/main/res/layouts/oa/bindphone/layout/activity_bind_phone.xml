<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.miic.oa.user.activity.BindPhoneActivity">
    <!--头部-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/back"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:gravity="center">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="bottom"
                    android:layout_gravity="center"
                    android:src="@drawable/back"/>
            </LinearLayout>
            <TextView
                style="?android:textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/news_detail_title"
                android:text="@string/bind_phone"
                android:textStyle="normal"
                android:paddingRight="50dp"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="9dp"/>
        </LinearLayout>
        <View android:layout_height="1dip"
            android:background="@color/linecolor"
            android:layout_width="match_parent"
            android:layout_marginBottom="15dp">
        </View>
    </LinearLayout>
    <!--手机号已绑定-->
    <LinearLayout
        android:id="@+id/isBind"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:visibility="visible">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/accept"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:text="手机已绑定！"
            android:textSize="16sp"
            android:textColor="@color/news_detail_content"
            />
        <TextView
            android:id="@+id/bind_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:text=""
            android:textSize="16sp"
            android:textColor="@color/news_detail_content"
            />
        <Button
            android:id="@+id/unBind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/btn_shape_background"
            android:text="    解绑手机    "
            android:textColor="@color/activitycolor"/>
    </LinearLayout>
    <!--①验证手机号-->
    <LinearLayout
        android:id="@+id/firstStepLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_gravity="bottom">
                        <EditText
                            android:id="@+id/phoneNum"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_weight="2"
                            android:layout_marginLeft="30dp"
                            android:hint="@string/input_phone"
                            android:textSize="14sp"
                            android:textColorHint="@color/hintcolor"
                            android:imeActionId="6"
                            android:imeOptions="actionUnspecified"
                            android:inputType="number"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:background="@null"
                            android:layout_gravity="bottom"
                            />
                        <TextView
                            android:id="@+id/sendIdentifyingCode"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:layout_gravity="bottom"
                            android:gravity="center"
                            android:layout_marginTop="3dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:paddingBottom="6dp"
                            android:paddingTop="6dp"
                            android:layout_marginRight="30dp"
                            android:text="@string/get_identifying_code"
                            android:textSize="12sp"
                            android:textColor="@color/activitycolor"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:background="@drawable/bg_identify_code_normal"
                            android:visibility="visible"/>
                    </LinearLayout>
                    <View android:layout_height="1dip"
                        android:background="@color/linecolor"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp">
                    </View>
                </LinearLayout>
            </LinearLayout>
            <EditText
                android:id="@+id/identifyingCode"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="30dp"
                android:hint="@string/input_identifying_code"
                android:textColorHint="@color/hintcolor"
                android:textSize="14sp"
                android:imeActionId="6"
                android:imeOptions="actionUnspecified"
                android:inputType="number"
                android:maxLines="1"
                android:singleLine="true"
                android:background="@null"/>
            <View android:layout_height="1dip"
                android:background="@color/linecolor"
                android:layout_width="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp">
            </View>
            <Button
                android:id="@+id/identifyingPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="50dp"
                android:background="@drawable/btn_shape_background_not_select"
                android:text="@string/identifying_phone"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"/>
        </LinearLayout>
    </LinearLayout>
    <!--③完成-->
    <LinearLayout
        android:id="@+id/thirdStepLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/finish_change_code"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="操作成功！"
                android:textColor="@color/linecolor"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
