<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="3dp"
    android:layout_marginTop="3dp"
    >
    <LinearLayout
        android:id="@+id/id_tab_bottom_main"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:descendantFocusability="beforeDescendants"
        android:gravity="bottom|center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btn_tab_bottom_main"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@color/activitycolor"
            android:clickable="false"
            android:src="@drawable/home" />

        <TextView
            android:id="@+id/btn_bottom_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:textSize="10sp"
            android:text="首页"
            android:textColor="@color/news_detail_title"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/id_tab_bottom_info"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="bottom|center_horizontal"
        android:descendantFocusability="beforeDescendants"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/btn_tab_bottom_info"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@color/activitycolor"
            android:clickable="false"
            android:src="@drawable/attibutes"/>
        <TextView
            android:id="@+id/btn_bottom_info"
            android:text="资讯"
            android:textSize="10sp"
            android:textColor="@color/news_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/id_tab_bottom_chat"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="bottom|center_horizontal"
        android:descendantFocusability="beforeDescendants"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/btn_tab_bottom_chat"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@color/activitycolor"
            android:clickable="false"
            android:src="@drawable/chat"/>
        <TextView
            android:id="@+id/btn_bottom_chat"
            android:text="沟通"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:textColor="@color/news_detail_title"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/id_tab_bottom_work"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="bottom|center_horizontal"
        android:descendantFocusability="beforeDescendants"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/btn_tab_bottom_work"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@color/activitycolor"
            android:clickable="false"
            android:src="@drawable/pen"/>
        <TextView
            android:id="@+id/btn_bottom_work"
            android:text="工作"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:textColor="@color/news_detail_title"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/id_tab_bottom_my"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="bottom|center_horizontal"
        android:descendantFocusability="beforeDescendants"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/btn_tab_bottom_my"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@color/activitycolor"
            android:clickable="false"
            android:src="@drawable/user"/>
        <TextView
            android:id="@+id/btn_bottom_my"
            android:text="我的"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:textColor="@color/news_detail_title"/>
    </LinearLayout>
</LinearLayout>

</LinearLayout>
