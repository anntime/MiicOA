<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.miic.oa.basic.activity.ContactsActivity"
    android:background="#fff">
    <!--顶部-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="9dp">
            <ImageView
                android:id="@+id/detail_back"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="10dp"
                android:gravity="bottom"
                android:layout_gravity="center"
                android:src="@drawable/back" />

            <TextView
                style="?android:textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="通讯录"
                android:textColor="@color/news_detail_title"
                android:textSize="16sp"
                android:textStyle="normal"
                android:paddingRight="26dp"/>

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/main_line"></View>
    </LinearLayout>

    <!--搜索框-->
    <EditText
        android:id="@+id/search_contacts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:hint="搜索"
        android:textColorHint="@color/news_detail_time"
        android:textSize="12dp"
        android:drawableLeft="@drawable/find"
        android:background="@drawable/bg_border"
        />
    <ListView
        android:id="@+id/contacts_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#000000">

    </ListView>

</LinearLayout>