<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.miic.oa.news.activity.NewsCommentsActivity"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants"
    >
    <!--新闻评论盛放容器（包括新闻+分割线）-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"  >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" >
                <com.example.miic.oa.common.roundImage.RoundImageView
                    android:id="@+id/from_commenter_url"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/boy"
                    app:type="circle"
                    android:scaleType="fitXY"
                    />
                <!--android:descendantFocusability="blocksDescendants"-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/from_commenter_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="机械工业信息中心"
                            android:textColor="@color/news_detail_content"
                            android:textSize="12dp"
                            android:gravity="right"
                            android:maxLines="1"/>
                        <TextView
                            android:id="@+id/to_commenter_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="机械工业信息中心"
                            android:textColor="@color/news_detail_content"
                            android:textSize="12dp"
                            android:gravity="left"
                            android:maxLines="1"/>
                        <TextView
                            android:id="@+id/comment_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="1小时前"
                            android:textColor="@color/news_detail_content"
                            android:textSize="12dp"
                            android:gravity="right"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/comment_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="评论内容"
                        android:textSize="14dp"
                        android:textColor="@color/news_detail_title"
                        android:inputType="textMultiLine"
                        />
                </LinearLayout>
            </LinearLayout>


        <!--分割线-->
        <View
            android:layout_height="1dp"
            android:background="@color/main_line"
            android:layout_width="fill_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="15dp">
        </View>
    </LinearLayout>
</LinearLayout>