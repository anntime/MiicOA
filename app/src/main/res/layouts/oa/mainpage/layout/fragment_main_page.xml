<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.miic.oa.news.fragment.InfoPageFragment">
    <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:text="首页"-->
        <!--android:gravity="center"/>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="9dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/news_detail_title"
                android:text="@string/logo_str"
                android:textStyle="normal"
                android:paddingLeft="50dp"
                />
            <LinearLayout
                android:id="@+id/search_button"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:gravity="center">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center"
                    android:background="@drawable/find" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <!--轮播-->

    <cn.bingoogolapple.bgabanner.BGABanner
        android:id="@+id/banner_main_alpha"
        style="@style/BannerDefaultStyle"
        app:banner_indicatorGravity="bottom|right"
        app:banner_transitionEffect="alpha" />

    <!--上下滚动的通知-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center">
        <ImageView
            android:id="@+id/iv_speaker0"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:src="@drawable/ic_red_loudspeaker"/>
        <com.example.miic.oa.common.marqueeview.MarqueeView
            android:id="@+id/marqueeView"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingLeft="5dp"
            android:paddingRight="25dp"
            app:mvDirection="bottom_to_top"
            app:mvAnimDuration="1000"
            app:mvInterval="3000"
            app:mvSingleLine="true"
            />

    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/main_line"></View>
    <!--图标导航-->
    <GridView
        android:id="@+id/gv_icon_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:numColumns="4"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/main_line"></View>
    <!--处理事务展示区-->
    <LinearLayout
        android:id="@+id/search_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="left"
            android:stretchMode="spacingWidthUniform"
            android:text="待处理事务"
            android:textColor="@color/news_detail_content"
            android:textSize="14sp" />
        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/refreshview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.example.miic.base.loadmore.LoadMoreListView
                android:id="@+id/pending_item_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="#00000000" />
        </android.support.v4.widget.SwipeRefreshLayout>
        <TextView
            android:id="@+id/message_tip"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="暂时还没有符合搜索条件的合同信息~"
            android:textColor="@color/news_detail_content"
            android:textSize="16sp"
            android:visibility="gone"/>
    </LinearLayout>
    <!--进度条-->
    <LinearLayout
        android:id="@+id/search_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateDrawable="@drawable/progressbar" />
    </LinearLayout>
</LinearLayout>
