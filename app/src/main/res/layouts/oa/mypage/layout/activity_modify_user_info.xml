<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.miic.oa.user.activity.ModifyUserInfoActivity"
    android:background="@color/activitycolor">
    <!--顶部-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:id="@+id/back"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:gravity="center">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="bottom"
                    android:layout_gravity="center"
                    android:src="@drawable/back"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/news_detail_title"
                android:text="@string/modify_user_info"
                android:textStyle="normal"
                android:paddingRight="50dp"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="9dp"/>
        </LinearLayout>

        <View android:layout_height="1dp"
            android:background="@color/main_line"
            android:layout_width="fill_parent">
        </View>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:fadingEdge="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--用户信息-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">
                <!--姓名-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true">
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="姓  名"
                        android:textColor="@color/news_detail_time"
                        android:textSize="16sp"/>
                    <View
                        android:layout_width="1dip"
                        android:layout_height="match_parent"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/main_line"
                        android:layout_gravity="center"
                        />
                    <LinearLayout
                        android:id="@+id/linearLayout_focus"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:layout_width="0px"
                        android:layout_height="0px"
                        android:orientation="vertical"/>
                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=" "
                        android:textColor="@color/news_detail_time"
                        android:textSize="16sp"
                        android:background="@null"/>
                </LinearLayout>
                <View android:layout_height="1dip"
                    android:background="@color/main_line"
                    android:layout_width="match_parent">
                </View>
                <!--性别-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="性  别"
                        android:textColor="@color/news_detail_time"
                        android:textSize="16sp"/>
                    <View
                        android:layout_width="1dip"
                        android:layout_height="match_parent"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/main_line"
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:id="@+id/sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=" "
                        android:textColor="@color/news_detail_time"
                        android:textSize="16sp"
                        android:background="@null"/>
                    <!--<Spinner-->
                        <!--android:id="@+id/sex"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_alignParentLeft="true"-->
                        <!--android:layout_gravity="bottom"-->
                        <!--/>-->
                </LinearLayout>
                <View android:layout_height="1dip"
                    android:background="@color/main_line"
                    android:layout_width="match_parent">
                </View>
                <!--民族-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="民  族"
                        android:textColor="@color/news_detail_time"
                        android:textSize="16sp"/>
                    <View
                        android:layout_width="1dip"
                        android:layout_height="match_parent"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/main_line"
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:id="@+id/nation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=" "
                        android:textColor="@color/news_detail_time"
                        android:textSize="16sp"
                        android:background="@null"/>
                    <!--<Spinner-->
                        <!--android:id="@+id/nation"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_alignParentLeft="true"-->
                        <!--android:layout_gravity="bottom"-->
                        <!--/>-->
                </LinearLayout>
                <View android:layout_height="1dip"
                    android:background="@color/main_line"
                    android:layout_width="match_parent">
                </View>
                <!--所属口-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="所 属 口"
                        android:textColor="@color/news_detail_time"
                        android:textSize="16sp"/>
                    <View
                        android:layout_width="1dip"
                        android:layout_height="match_parent"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/main_line"
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:id="@+id/port_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=" "
                        android:textColor="@color/news_detail_time"
                        android:textSize="16sp"
                        android:background="@null"/>
                </LinearLayout>
                <View android:layout_height="1dip"
                    android:background="@color/main_line"
                    android:layout_width="match_parent">
                </View>
                <!--职称-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="职  称"
                        android:textColor="@color/news_detail_time"
                        android:textSize="16sp"/>
                    <View
                        android:layout_width="1dip"
                        android:layout_height="match_parent"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/main_line"
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:id="@+id/position"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=" "
                        android:textColor="@color/news_detail_time"
                        android:textSize="16sp"
                        android:background="@null"/>
                </LinearLayout>
                <View android:layout_height="1dip"
                    android:background="@color/main_line"
                    android:layout_width="match_parent">
                </View>
                <!--部门-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="部  门"
                        android:textColor="@color/news_detail_time"
                        android:textSize="16sp"/>
                    <View
                        android:layout_width="1dip"
                        android:layout_height="match_parent"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/main_line"
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:id="@+id/dept_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=" "
                        android:textColor="@color/news_detail_time"
                        android:textSize="16sp"
                        android:background="@null"/>
                </LinearLayout>
                <View android:layout_height="1dip"
                    android:background="@color/main_line"
                    android:layout_width="match_parent">
                </View>
                <!--QQ-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Q Q"
                        android:textColor="@color/news_detail_time"
                        android:textSize="16sp"/>
                    <View
                        android:layout_width="1dip"
                        android:layout_height="match_parent"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/main_line"
                        android:layout_gravity="center"
                        />
                    <EditText
                        android:id="@+id/qq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=" "
                        android:textColor="@color/news_detail_title"
                        android:textSize="16sp"
                        android:background="@null"/>
                </LinearLayout>
                <View android:layout_height="1dip"
                    android:background="@color/main_line"
                    android:layout_width="match_parent">
                </View>
                <!--微信-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="微 信"
                        android:textColor="@color/news_detail_time"
                        android:textSize="16sp"/>
                    <View
                        android:layout_width="1dip"
                        android:layout_height="match_parent"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/main_line"
                        android:layout_gravity="center"
                        />
                    <EditText
                        android:id="@+id/wechat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=" "
                        android:textColor="@color/news_detail_title"
                        android:textSize="16sp"
                        android:background="@null"/>
                </LinearLayout>
                <View android:layout_height="1dip"
                    android:background="@color/main_line"
                    android:layout_width="match_parent">
                </View>
                <!--手机-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="手 机"
                        android:textColor="@color/news_detail_time"
                        android:textSize="16sp"/>
                    <View
                        android:layout_width="1dip"
                        android:layout_height="match_parent"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/main_line"
                        android:layout_gravity="center"
                        />
                    <EditText
                        android:id="@+id/mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=" "
                        android:textColor="@color/news_detail_title"
                        android:textSize="16sp"
                        android:background="@null"/>
                </LinearLayout>
                <View android:layout_height="1dip"
                    android:background="@color/main_line"
                    android:layout_width="match_parent">
                </View>
                <!--个人备注-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="个人备注"
                        android:textColor="@color/news_detail_time"
                        android:textSize="16sp"/>
                    <View
                        android:layout_width="1dip"
                        android:layout_height="match_parent"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/main_line"
                        android:layout_gravity="center"
                        />
                    <EditText
                        android:id="@+id/remark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=" "
                        android:textColor="@color/news_detail_title"
                        android:textSize="16sp"
                        android:background="@null"/>
                </LinearLayout>
                <View android:layout_height="1dip"
                    android:background="@color/main_line"
                    android:layout_width="match_parent">
                </View>
            </LinearLayout>
            <!--确认修改按钮-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="vertical">
                <Button
                    android:id="@+id/submit_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/colorAccent"
                    android:layout_alignParentBottom="true"
                    android:text="保存"
                    android:textColor="@color/activitycolor"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
