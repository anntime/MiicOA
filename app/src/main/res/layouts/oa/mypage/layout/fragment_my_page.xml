<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.miic.oa.user.fragment.MyPageFragment">
    <!--头部-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="9dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/news_detail_title"
                android:text="@string/logo_str"
                android:textStyle="normal"
                 />
            <ImageView
                android:id="@+id/search_button"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/find"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:visibility="gone"/>
        </LinearLayout>

        <View android:layout_height="1dip"
            android:background="@color/main_line"
            android:layout_width="fill_parent">
        </View>
    </LinearLayout>
    <!--个人信息-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/my_background"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp">
                    <TextView
                        android:id="@+id/my_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:text=" "
                        android:textSize="16sp"
                        android:textColor="@color/news_detail_title"
                        android:gravity="left"/>
                    <TextView
                        android:id="@+id/my_user_position_cn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:text=" "
                        android:textSize="14sp"
                        android:textColor="@color/news_detail_time"
                        android:gravity="left"
                        android:layout_marginBottom="10dp"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/my_user_erweima"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/boy"
                    android:layout_gravity="right|top"
                    android:layout_centerVertical="true"/>
            </LinearLayout>
            <TextView
                android:id="@+id/my_user_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingBottom="10dp"
                android:text="  "
                android:textSize="16sp"
                android:textColor="@color/news_detail_content"
                android:gravity="left"/>
        </LinearLayout>


    <!--信息修改类-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">
        <LinearLayout
            android:id="@+id/my_modify_user_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp">
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/pencil"
                android:layout_gravity="left"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="修改个人信息"
                android:textSize="14sp"
                android:textColor="@color/news_detail_content"
                android:gravity="left"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <View android:layout_height="1dip"
            android:background="@color/main_line"
            android:layout_width="fill_parent">
        </View>
        <LinearLayout
            android:id="@+id/my_modify_user_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp" >
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/lock"
                android:layout_gravity="left"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:text="修改密码"
                android:textSize="14sp"
                android:textColor="@color/news_detail_content"
                android:gravity="left"/>
        </LinearLayout>
        <View android:layout_height="1dip"
            android:background="@color/main_line"
            android:layout_width="fill_parent">
        </View>
        <LinearLayout
            android:id="@+id/my_modify_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp" >
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/phone"
                android:layout_gravity="left"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:text="绑定手机"
                android:textSize="14sp"
                android:textColor="@color/news_detail_content"
                android:gravity="left"/>
        </LinearLayout>
        <View android:layout_height="1dp"
            android:background="@color/main_line"
            android:layout_width="fill_parent">
        </View>
        <LinearLayout
            android:id="@+id/my_version_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp" >
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/if_order"
                android:layout_gravity="left"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:text="版本信息"
                android:textSize="14sp"
                android:textColor="@color/news_detail_content"
                android:gravity="left"/>
            <TextView
                android:id="@+id/version_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:text=""
                android:textSize="14sp"
                android:textColor="@color/news_detail_content"
                android:gravity="right"/>
        </LinearLayout>
        <View android:layout_height="1dp"
            android:background="@color/main_line"
            android:layout_width="fill_parent">
        </View>

    </LinearLayout>

    <!--退出按钮-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">
        <Button
            android:id="@+id/sign_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/colorAccent"
            android:layout_alignParentBottom="true"
            android:text="退出"
            android:textColor="@color/activitycolor"/>
    </LinearLayout>
</LinearLayout>
