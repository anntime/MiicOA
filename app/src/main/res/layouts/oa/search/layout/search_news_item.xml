<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">
    <!--新闻条目盛放容器（包括新闻+分割线）-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--新闻条目-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="2dp">
            <!--新闻标题与时间-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="3dp">
                <TextView
                    android:id="@+id/news_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="中心举办四季度中小企业形式分析专家座谈会"
                    android:textSize="14sp"
                    android:textColor="@color/news_detail_title"
                    android:gravity="left"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="20dp"
                    android:singleLine="true"
                    android:ellipsize="end"/>
            </LinearLayout>
            <!--点赞、评论、浏览-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <!--点赞-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@drawable/heart"
                            android:layout_marginRight="2dp"
                            android:layout_centerVertical="true"/>
                        <TextView
                            android:id="@+id/heart_count"
                            android:layout_width="24dp"
                            android:layout_height="match_parent"
                            android:text="32"
                            android:textSize="10sp"
                            android:textColor="@color/news_detail_time"
                            android:gravity="bottom|left"/>
                    </LinearLayout>
                    <!--评论-->
                    <LinearLayout
                        android:id="@+id/can_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >
                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@drawable/comment"
                            android:layout_marginRight="2dp"/>
                        <TextView
                            android:id="@+id/comment_count"
                            android:layout_width="24dp"
                            android:layout_height="match_parent"
                            android:text="10"
                            android:textColor="@color/news_detail_time"
                            android:textSize="10sp"
                            android:gravity="bottom|left"/>
                    </LinearLayout>
                    <!--阅读-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >
                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@drawable/read"
                            android:layout_marginRight="2dp"/>
                        <TextView
                            android:id="@+id/read_count"
                            android:layout_width="24dp"
                            android:layout_height="match_parent"
                            android:text="60"
                            android:textColor="@color/news_detail_time"
                            android:textSize="10sp"
                            android:gravity="bottom|left"/>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/news_publish_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2018-1-30"
                    android:textSize="10sp"
                    android:textColor="@color/news_detail_time"
                    android:gravity="right|bottom"
                    android:layout_marginRight="15dp"/>
            </LinearLayout>
        </LinearLayout>
        <!--分割线-->
        <View
            android:layout_height="1dp"
            android:background="@color/main_line"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="15dp">
        </View>
    </LinearLayout>
</LinearLayout>
