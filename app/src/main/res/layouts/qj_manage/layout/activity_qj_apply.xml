<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/activitycolor"
    tools:context="com.example.miic.qjManage.activity.QjApplyActivity">
    <!--顶部-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/search_back"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:gravity="center">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/back"
                    android:layout_gravity="center"
                    android:text="返回"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="9dp"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/news_detail_title"
                android:text="@string/add_qj_apply"
                android:textStyle="normal" />
            <LinearLayout
                android:id="@+id/history_button"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:gravity="center">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center"
                    android:background="@drawable/statistics_on" />
            </LinearLayout>
        </LinearLayout>

        <View android:layout_height="1dp"
            android:background="@color/main_line"
            android:layout_width="fill_parent">
        </View>
    </LinearLayout>
    <!--申请详情-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:fadingEdge="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--请假申请信息-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical"
                >
                <!--请假事由-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true">
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="请假事由"
                        android:textColor="@color/news_detail_time"
                        android:textSize="16sp"/>
                    <View
                        android:layout_width="1dip"
                        android:layout_height="match_parent"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/main_line"
                        android:layout_gravity="center"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        />
                    <EditText
                        android:id="@+id/qj_reason"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="请填写…"
                        android:textColor="@color/news_detail_time"
                        android:textSize="16sp"
                        android:background="@null"/>
                </LinearLayout>
                <View android:layout_height="1dip"
                    android:background="@color/main_line"
                    android:layout_width="match_parent">
                </View>
                <!--请假类型-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="请假类型"
                        android:textColor="@color/news_detail_time"
                        android:textSize="16sp"/>
                    <View
                        android:layout_width="1dip"
                        android:layout_height="match_parent"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/main_line"
                        android:layout_gravity="center"
                        />
                    <Spinner
                        android:id="@+id/qj_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_gravity="bottom"/>
                </LinearLayout>
                <View android:layout_height="1dip"
                    android:background="@color/main_line"
                    android:layout_width="match_parent">
                </View>
                <!--请假时间-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="请假时间"
                        android:textColor="@color/news_detail_time"
                        android:textSize="16sp"/>
                    <View
                        android:layout_width="1dip"
                        android:layout_height="match_parent"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/main_line"
                        android:layout_gravity="center"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/start_Time"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text=" "
                            android:textColor="@color/news_detail_title"
                            android:textSize="16sp"
                            android:background="@null"/>
                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_gravity="center"
                            android:src="@drawable/down"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="开始"
                            android:textColor="@color/news_detail_time"
                            android:textSize="16sp"
                            android:background="@null"/>
                    </LinearLayout>
                </LinearLayout>
                <View android:layout_height="1dip"
                    android:background="@color/main_line"
                    android:layout_width="match_parent">
                </View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text=" "
                        android:textColor="@color/news_detail_time"
                        android:textSize="16sp"/>
                    <View
                        android:layout_width="1dip"
                        android:layout_height="match_parent"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginRight="15dp"
                        android:layout_gravity="center"
                        />
                    <!--android:background="@color/main_line"-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/end_Time"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text=" "
                            android:textColor="@color/news_detail_title"
                            android:textSize="16sp"
                            android:background="@null"/>
                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_gravity="center"
                            android:src="@drawable/down"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="结束"
                            android:textColor="@color/news_detail_time"
                            android:textSize="16sp"
                            android:background="@null"/>
                    </LinearLayout>
                </LinearLayout>
                <View android:layout_height="1dip"
                    android:background="@color/main_line"
                    android:layout_width="match_parent">
                </View>
                <!--请假天数-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="请假天数"
                        android:textColor="@color/news_detail_time"
                        android:textSize="16sp"/>
                    <View
                        android:layout_width="1dip"
                        android:layout_height="match_parent"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/main_line"
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:id="@+id/qj_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="1天"
                        android:textColor="@color/news_detail_time"
                        android:textSize="16sp"
                        android:background="@null"
                        android:singleLine="true"
                        android:maxLines="1"/>
                </LinearLayout>
                <View android:layout_height="1dip"
                    android:background="@color/main_line"
                    android:layout_width="match_parent">
                </View>
                <!--职称-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="剩余年假"
                        android:textColor="@color/news_detail_time"
                        android:textSize="16sp"/>
                    <View
                        android:layout_width="1dip"
                        android:layout_height="match_parent"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/main_line"
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:id="@+id/left_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="6天"
                        android:textColor="@color/seal_finish"
                        android:textSize="16sp"
                        android:background="@null"
                        android:singleLine="true"
                        android:maxLines="1"/>
                </LinearLayout>
                <View android:layout_height="1dip"
                    android:background="@color/main_line"
                    android:layout_width="match_parent">
                </View>
                <!--联系方式-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="联系方式"
                        android:textColor="@color/news_detail_time"
                        android:textSize="16sp"/>
                    <View
                        android:layout_width="1dip"
                        android:layout_height="match_parent"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/main_line"
                        android:layout_gravity="center"
                        />
                    <EditText
                        android:id="@+id/mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=" "
                        android:textColor="@color/news_detail_title"
                        android:textSize="16sp"
                        android:background="@null"/>
                </LinearLayout>
                <View android:layout_height="1dip"
                    android:background="@color/main_line"
                    android:layout_width="match_parent">
                </View>
                <!--审核人员-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="审核人员"
                        android:textColor="@color/news_detail_time"
                        android:textSize="16sp"/>
                    <View
                        android:layout_width="1dip"
                        android:layout_height="match_parent"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/main_line"
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:id="@+id/assessor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=" "
                        android:textColor="@color/news_detail_time"
                        android:textSize="16sp"
                        android:background="@null"/>
                </LinearLayout>
                <View android:layout_height="1dip"
                    android:background="@color/main_line"
                    android:layout_width="match_parent">
                </View>
            </LinearLayout>
            <!--提交按钮-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="vertical">
                <Button
                    android:id="@+id/submit_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/colorAccent"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom"
                    android:text="提交"
                    android:textColor="@color/activitycolor"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
