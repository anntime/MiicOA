<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/activitycolor"
    tools:context="com.example.miic.sealManagement.activity.SealApplyActivity">
    <!--顶部-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/search_back"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:gravity="center">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/back"
                    android:layout_gravity="center"
                    android:text="返回"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="9dp"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/news_detail_title"
                android:text="@string/add_seal_apply"
                android:textStyle="normal"
                android:paddingRight="50dp"/>
        </LinearLayout>

        <View android:layout_height="1dp"
            android:background="@color/main_line"
            android:layout_width="fill_parent">
        </View>
    </LinearLayout>
    <!--申请详情-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:fadingEdge="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--用户信息-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">
                <!--姓名-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true">
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="用印类型"
                        android:textColor="@color/news_detail_time"
                        android:textSize="16sp"/>
                    <View
                        android:layout_width="1dip"
                        android:layout_height="match_parent"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/main_line"
                        android:layout_gravity="center"
                        />
                    <LinearLayout
                        android:id="@+id/linearLayout_focus"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:layout_width="0px"
                        android:layout_height="0px"
                        android:orientation="vertical"/>
                    <Spinner
                    android:id="@+id/seal_use_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="bottom"
                    />
                </LinearLayout>
                <View android:layout_height="1dip"
                    android:background="@color/main_line"
                    android:layout_width="match_parent">
                </View>
                <!--性别-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="用印部门"
                        android:textColor="@color/news_detail_time"
                        android:textSize="16sp"/>
                    <View
                        android:layout_width="1dip"
                        android:layout_height="match_parent"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/main_line"
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:id="@+id/dept_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=" "
                        android:textColor="@color/news_detail_time"
                        android:textSize="16sp"
                        android:background="@null"/>
                </LinearLayout>
                <View android:layout_height="1dip"
                    android:background="@color/main_line"
                    android:layout_width="match_parent">
                </View>
                <!--民族-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="用印时间"
                        android:textColor="@color/news_detail_time"
                        android:textSize="16sp"/>
                    <View
                        android:layout_width="1dip"
                        android:layout_height="match_parent"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/main_line"
                        android:layout_gravity="center"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/btn_Time"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text=" "
                            android:textColor="@color/news_detail_title"
                            android:textSize="16sp"
                            android:background="@null"/>
                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_gravity="center"
                            android:src="@drawable/down"/>
                    </LinearLayout>
                </LinearLayout>
                <View android:layout_height="1dip"
                    android:background="@color/main_line"
                    android:layout_width="match_parent">
                </View>
                <!--所属口-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="用印事由"
                        android:textColor="@color/news_detail_time"
                        android:textSize="16sp"/>
                    <View
                        android:layout_width="1dip"
                        android:layout_height="match_parent"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/main_line"
                        android:layout_gravity="center"
                        />
                    <EditText
                        android:id="@+id/reason"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="请填写"
                        android:textColorHint="@color/news_detail_time"
                        android:text=""
                        android:textColor="@color/news_detail_title"
                        android:textSize="16sp"
                        android:background="@null"
                        android:singleLine="true"
                        android:maxLines="1"/>
                </LinearLayout>
                <View android:layout_height="1dip"
                    android:background="@color/main_line"
                    android:layout_width="match_parent">
                </View>
                <!--职称-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="发往单位"
                        android:textColor="@color/news_detail_time"
                        android:textSize="16sp"/>
                    <View
                        android:layout_width="1dip"
                        android:layout_height="match_parent"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/main_line"
                        android:layout_gravity="center"
                        />
                    <EditText
                        android:id="@+id/organization"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="请填写"
                        android:textColorHint="@color/news_detail_time"
                        android:text=""
                        android:textColor="@color/news_detail_title"
                        android:textSize="16sp"
                        android:background="@null"
                        android:singleLine="true"
                        android:maxLines="1"/>
                </LinearLayout>
                <View android:layout_height="1dip"
                    android:background="@color/main_line"
                    android:layout_width="match_parent">
                </View>
                <!--部门-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="印章类型"
                        android:textColor="@color/news_detail_time"
                        android:textSize="16sp"/>
                    <View
                        android:layout_width="1dip"
                        android:layout_height="match_parent"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/main_line"
                        android:layout_gravity="center"
                        />
                    <Spinner
                    android:id="@+id/seal_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="bottom"/>
            </LinearLayout>
            <View android:layout_height="1dip"
                android:background="@color/main_line"
                android:layout_width="match_parent">
            </View>
            <!--QQ-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="经  办  人"
                        android:textColor="@color/news_detail_time"
                        android:textSize="16sp"/>
                    <View
                        android:layout_width="1dip"
                        android:layout_height="match_parent"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/main_line"
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:id="@+id/operator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=" "
                        android:textColor="@color/news_detail_time"
                        android:textSize="16sp"
                        android:background="@null"/>
                </LinearLayout>
                <View android:layout_height="1dip"
                    android:background="@color/main_line"
                    android:layout_width="match_parent">
                </View>
                <!--微信-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="用印份数"
                        android:textColor="@color/news_detail_time"
                        android:textSize="16sp"/>
                    <View
                        android:layout_width="1dip"
                        android:layout_height="match_parent"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/main_line"
                        android:layout_gravity="center"
                        />
                    <EditText
                        android:id="@+id/seal_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="请填写"
                        android:textColorHint="@color/news_detail_time"
                        android:text=""
                        android:textColor="@color/news_detail_title"
                        android:textSize="16sp"
                        android:background="@null"
                        android:singleLine="true"
                        android:maxLines="1"/>
                </LinearLayout>
                <View android:layout_height="1dip"
                    android:background="@color/main_line"
                    android:layout_width="match_parent">
                </View>
                <!--手机-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="审核人员"
                        android:textColor="@color/news_detail_time"
                        android:textSize="16sp"/>
                    <View
                        android:layout_width="1dip"
                        android:layout_height="match_parent"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/main_line"
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:id="@+id/assessor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=" "
                        android:textColor="@color/news_detail_time"
                        android:textSize="16sp"
                        android:background="@null"/>
                </LinearLayout>
                <View android:layout_height="1dip"
                    android:background="@color/main_line"
                    android:layout_width="match_parent">
                </View>
            </LinearLayout>
            <!--确认修改按钮-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="vertical">
                <Button
                    android:id="@+id/save_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/colorAccent"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom"
                    android:text="临时保存"
                    android:textColor="@color/activitycolor"/>
                <Button
                    android:id="@+id/submit_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/colorAccent"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom"
                    android:text="提交审批"
                    android:textColor="@color/activitycolor"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
