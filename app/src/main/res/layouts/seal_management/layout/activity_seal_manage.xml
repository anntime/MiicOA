                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="用印审核"
                android:textSize="12sp"
                android:textColor="@color/seal_header"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/seal_print"
