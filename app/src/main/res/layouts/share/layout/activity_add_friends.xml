<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.miic.share.activity.AddFriendsActivity"
    android:background="@color/activitycolor">
    <include layout="@layout/page_title_bar" />
    <!--搜索框-->
    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <EditText
            android:id="@+id/search_keyword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:hint="请输入查询关键字"
            android:textColorHint="@color/news_detail_time"
            android:textSize="12sp"
            android:drawableLeft="@drawable/find"
            android:background="@drawable/bg_border"
            android:imeOptions="actionSearch"
            android:maxLines="1"
            android:singleLine="true"
            />
    </LinearLayout>
    <!--搜索结果-->
    <ListView
        android:id="@+id/search_list"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:divider="@null"></ListView>
</LinearLayout>
